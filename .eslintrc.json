{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"browser": true
	},
	"globals": {
		"VARIABLES": false,
		"filepicker": false,
		"CKEDITOR": false,
		"moment": false,
		"_": false
	},
	"rules": {
		"no-tabs": 2,
		"indent": [ "error", 4 ],
		"eqeqeq": [ 2, "always" ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "single" ],
		"comma-dangle": [ "error", "only-multiline" ],
		"no-console": 0,
		"semi": [ "error", "always" ],
		"max-len": [
			"error",
			120,
			{ "ignoreComments": true },
			{ "ignoreUrls": true }
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "(document|event|window)",
				"varsIgnorePattern": "(document|event|window)"
			}
		]
	}
}
